- date = !card.date.presence ? card.created_at : Date.parse(card.date)
.col-md-12.blog-summary.d-flex.flex-column.rounded-3
  - if not card.image.nil? or card.image != ''
    %a.fluid-image{'href': card.link, 'target':'_blank', 'role':'button'}
      = field_nest :image, view: :core, size: :large
  %time.date-tag.position-absolute.text-center.d-flex.bg-white.text-uppercase{'date-time': date}
    %span.d-block.text-white.day.flex-shrink-0.font-weight-bold
      = date.strftime('%d')
    %span.d-block.py-2.px-3
      = date.strftime('%b %Y')
  .row.ps-3.pe-3.mb-2.mt-1
    .col-12
      %span.badge.bg-primary
        = 'blog'
      - blog_types.each do |type|
        %span.badge.bg-primary
          = type
  .row.ps-3.pe-3
    %a{'href': card.link, 'target':'_blank', 'role':'button'}
      %h5
        = card.name
  .row.ps-3.pe-3
    = field_nest :description, view: :content
  .row.ps-3.pe-3.pb-3.pt-3.mt-auto
    .col-12.text-center
      %a.btn.btn-outline-primary.ps-4.pe-4{'href': card.link, 'target':'_blank', 'role':'button'}
        More Details
